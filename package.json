{
  "private": true,
  "name": "@axonivy/variable-editor-root",
  "engines": {
    "node": ">=20.19.0"
  },
  "volta": {
    "node": "22.17.0"
  },
  "scripts": {
    "ci": "npm install && npm run package && (npm run lint:ci || true) && npm run type && npm run test:ci",
    "clean": "lerna run clean",
    "build": "tsc --build && tscp --build",
    "package": "lerna run package",
    "build:clean": "lerna run build:clean",
    "type": "lerna run type",
    "lint": "eslint",
    "lint:ci": "eslint -o eslint.xml -f checkstyle",
    "lint:fix": "eslint --fix",
    "lint:inspect": "eslint --inspect-config",
    "protocol": "npm run -w @axonivy/variable-editor-protocol",
    "dev": "npm run -w @axonivy/variable-editor-standalone dev",
    "test": "npm run -w @axonivy/variable-editor test",
    "test:ci": "lerna run test:ci",
    "webtest": "npm run -w @axonivy/variable-editor-playwright webtest",
    "webtest:screenshot": "npm run -w @axonivy/variable-editor-playwright webtest:screenshots",
    "update:axonivy:next": "npx --yes npm-check-updates @axonivy* -ws -t semver -u",
    "publish:next": "lerna publish --exact --canary --preid next --pre-dist-tag next --no-git-tag-version --no-push --ignore-scripts --yes"
  },
  "devDependencies": {
    "@axonivy/eslint-config": "~12.0.7-next.604",
    "@types/node": "^22.10.2",
    "@lerna-lite/cli": "^3.12.1",
    "@lerna-lite/publish": "^3.12.1",
    "@lerna-lite/run": "^3.12.1",
    "@lerna-lite/version": "^3.12.1",
    "rimraf": "^6.0.1",
    "typescript": "~5.9.0",
    "typescript-cp": "^0.1.9"
  },
  "workspaces": [
    "packages/*",
    "integrations/*",
    "playwright"
  ]
}
